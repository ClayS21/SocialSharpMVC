@model List<Post>

@{
    ViewData["Title"] = "Home Page";
}

<main id="side-main">

    <div class="container">
        <div class="feed">
            @* Stories placeholder *@
            <div class="stories-container">Stories</div>
        </div>
        <div class="right-sidebar">
            <partial name="Sidebar/_SuggestedFriends" />

            <partial name="Sidebar/_Trending" />
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="no-posts">
            There are no posts yet.
        </div>
    }

    @foreach (var post in Model)
    {
        <div class="post">

            <div class="post-header">
                <a class="post-user">
                    <img src="@(post.User.ProfilePictureUrl ?? "~/images/avatar/user.png")" alt="" class="post-user-img">

                    <div class="post-user-title">
                        <h4 class="post-user-name">@post.User.FullName</h4>
                        <h6>@post.DateCreated.ToString("MM/dd/yy")</h6>
                    </div>
                </a>

                <div class="post-menu"></div>
            </div>

            <div class="post-body">

                <div class="post-body-text">@post.Content</div>

                @if (!string.IsNullOrEmpty(post.ImageUrl))
                {
                    <img src="@post.ImageUrl" class="post-img">
                }
            </div>

        </div>
    }

</main>

<partial name="Modals/_CreateStory" />
<partial name="Modals/_CreateStatus" />
