@model Post

@{
    TimeSpan timeSpanSincePosted = DateTime.UtcNow.Subtract(Model.DateCreated);

    string displayTime = "";

    if (timeSpanSincePosted.TotalDays >= 1)
        displayTime = $"{timeSpanSincePosted.Days} day ago";
    else if (timeSpanSincePosted.TotalHours >= 1)
        displayTime = $"{timeSpanSincePosted.Hours} hours ago";
    else if (timeSpanSincePosted.TotalMinutes >= 1)
        displayTime = $"{timeSpanSincePosted} minutes ago";
    else
        displayTime = "Just now";
}

<div class="post">

    <div class="post-header">
        <a class="post-user">
            <img src="@(@Model.User.ProfilePictureUrl ?? "~/images/avatar/user.png")" alt="" class="post-user-img">

            <div class="post-user-title">
                <h4 class="post-user-name">@Model.User.FullName</h4>
                <h6 title="@Model.DateCreated.ToString()">@displayTime</h6>
            </div>
        </a>

        <div class="post-menu"></div>
    </div>

    <div class="post-body">

        <div class="post-body-text">@Model.Content</div>

        @if (!string.IsNullOrEmpty(@Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="post-img">
        }
    </div>

    <div class="post-actions">
        <form asp-controller="Home" asp-action="TogglePostLike">
            <input type="hidden" name="postId" value="@Model.PostId">

            <button type="submit">
                <i class="@(Model.Likes.Any(l => l.UserId == 1) ? "ri-heart-fill" : "ri-heart-line") like-icon"></i>
            </button>

            <a href="">
                @Model.Likes.Count
            </a>

            <a>@Model.Comments.Count</a>
        </form>

        <div class="comment-section">
            @foreach(var comment in Model.Comments.OrderByDescending(c => c.DateCreated).Take(3))
            {
                <div class="comment-box">
                    <a href="">
                        <img src="@(comment.User.ProfilePictureUrl ?? "~/images/avatar/user.png")" alt="" class="comment-user-img">
                    </a>
                    <div class="comment">
                        <a href="">@comment.User.FullName</a>
                        <small>@comment.DateCreated.ToString()</small>
                        <p>@comment.Content</p>
                    </div>

                </div>
            }

            @if (Model.Comments.Count > 3)
            {
                <div>Show all comments</div>
            }
        </div>

        <div class="post-comment">
            <form asp-controller="Home" asp-action="AddPostComment">
                <input type="hidden" name="postId" value="@Model.PostId">

                <textarea name="content" placeholder="Add comment..."></textarea>
                <button type="submit">Comment</button>
            </form>
        </div>
    </div>

</div>